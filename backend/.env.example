# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=paperly

# JWT Secret (use a secure random string in production)
JWT_SECRET=your_jwt_secret_here

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google Gemini AI Configuration (Primary AI provider - free tier available)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
# Optional: specify model (defaults to gemini-1.5-flash-8b)
# Available models: gemini-1.5-flash-8b, gemini-1.5-flash, gemini-1.5-pro, gemini-pro
GEMINI_MODEL=gemini-1.5-flash-8b

# Groq AI Configuration (Fallback AI provider when Gemini fails or rate limited)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
# Optional: specify model (defaults to llama-3.1-8b-instant)
GROQ_MODEL=llama-3.1-8b-instant

# AI Summarization Settings
# Maximum characters to send to AI for summarization
SUMMARY_MAX_CHARS=16000
# Character limit for fast single-pass summarization (vs chunked processing)

